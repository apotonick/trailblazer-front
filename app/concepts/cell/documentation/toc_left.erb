<div class="lg:pt-0 lg:pl-6 xl:pl-20 p-10 pl-20 text-white leading-10">
  <% @options[:headers].each do |header| %>
    <% next if header.options[:visible] == false %>

    <div class="flex flex-col pt-1">
      <%= link_to %(> #{header.title}), header.options[:target], class: "pl-3 font-bold #{header.items.any? ? 'bg-dark-purple' : ''}" %>
      <% header.items.each do |h2| %>
        <%= link_to h2.title, "##{h2.id}", class: "pl-8" %>
      <% end %>
    </div>
  <% end %>
</div>
